@page
@model HistDataReportModel
@{
    Layout = "_MainLayout";
    dynamic dict = Locale.GetDictionary("Scada.Web.Plugins.PlgMain.Areas.Main.Pages.HistDataReport");
    ViewBag.Title = dict.PageTitle;
}

@section Styles {
    <link href="~/plugins/Main/css/report.min.css" rel="stylesheet" asp-append-version="true" />
}

@section Scripts {
    <script src="~/plugins/Main/js/hist-data-report.js" asp-append-version="true"></script>
}

<h1>@dict.PageTitle</h1>

<form id="frmReportArgs" method="post" class="report-args">
    <div class="mb-3">
        <label id="lblStartTime" for="txtStartTime" class="form-label">From</label>
        <input type="datetime-local" id="txtStartTime" class="form-control" required />
    </div>
    <div class="mb-3">
        <label id="lblEndTime" for="txtEndTime" class="form-label">To</label>
        <input type="datetime-local" id="txtEndTime" class="form-control" required />
    </div>
    <div class="mb-3">
        <label id="lblArchive" for="selArchive" class="form-label">Archive</label>
        <select id="selArchive" class="form-select"></select>
    </div>
    <div class="mb-3">
        <label id="lblCnlNums" for="txtCnlNums" class="form-label">Channels</label>
        <div class="input-group">
            <input type="text" id="txtCnlNums" class="form-control" required />
            <button type="button" id="btnSelectCnls" class="btn btn-outline-secondary">Select...</button>
        </div>
    </div>
    <button type="button" id="btnGenerateReport" class="btn btn-primary">Download Report</button>
</form>
